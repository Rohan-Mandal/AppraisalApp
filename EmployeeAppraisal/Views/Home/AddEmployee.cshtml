@model Employee;
@using EmployeeAppraisal.DesignationEnum;

<section class="vh-100 gradient-custom">
    <div class="container-fluid py-5 h-100" "bg-image" 
     style="background-image: url('https://mdbcdn.b-cdn.net/img/Photos/Vertical/mountain3.webp'); height: 100% ">
        <div class="row justify-content-center align-items-center h-100">
            <div class="col-12 col-lg-9 col-xl-7">
                <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
                    <div class="card-body p-4 p-md-5">
                        <h3 class="mb-4 pb-2 pb-md-0 mb-md-5 text-center">Registration Form</h3>
                        <form asp-action="AddEmployee" asp-controller="Home"  method="post">

                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <input asp-for="Name" class="form-control form-control-lg" />
                                        <label asp-for="Name"></label>
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>

                                </div>
                                <div class="col-md-6 mb-4">

                                    <div class="form-outline">
                                        <select class="form-control form-control-lg" asp-for="Designation" asp-items="Html.GetEnumSelectList<designation>()"></select>
                                        <span asp-validation-for="Designation" class="text-danger"></span>

                                    </div>

                                </div>
                            </div>                  

                            <div class="row">
                                <div class="col-md-6 mb-4 pb-2">

                                    <div class="form-outline">
                                        <input asp-for="Email" class="form-control form-control-lg" />
                                        <label asp-for="Email" for="email"></label>
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>

                                </div>
                                <div class="col-md-6 mb-4 pb-2">

                                    <div class="form-outline">
                                        <input asp-for="MID" class="form-control form-control-lg" />
                                        <label asp-for="MID" for="MID"></label>
                                        <span asp-validation-for="MID" class="text-danger"></span>
                                    </div>

                                </div>
                                <div class="col-md-6 mb-4 pb-2">

                                    <div class="form-outline">
                                        <input type="password" asp-for="Password" class="form-control form-control-lg" />
                                        <label asp-for="Password" for="password"></label>
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>

                                </div>
                            </div>

                            <div class="mt-4 pt-2 text-center">
                                <input class="btn btn-success btn-lg" type="submit" value="Submit" />
                                <input class="btn btn-success btn-lg" type="reset" value="Reset" />
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>